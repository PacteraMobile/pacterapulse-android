<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:padding="16dp">


	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right|center_vertical"
					android:gravity="end"
					android:textStyle="bold"
					tools:text="@string/user_name"/>

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left|center_vertical"
					android:layout_marginLeft="0dp"
					android:layout_marginTop="0dp"
					android:contentDescription="@string/detail_emotion_desc"
					android:src="@mipmap/happy_icon"/>
			</FrameLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/hear_more"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/workload"/>

			<SeekBar
				android:id="@+id/seek_work_overload"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="start"
					android:text="@string/label_bad"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="end"
					android:text="@string/label_good"/>
			</FrameLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/hear_more"/>

			<SeekBar
				android:id="@+id/seek_hear_more"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="start"
					android:text="@string/label_bad"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="end"
					android:text="@string/label_good"/>
			</FrameLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/feedback"/>

			<SeekBar
				android:id="@+id/seek_project_feedback"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="start"
					android:text="@string/label_bad"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="end"
					android:text="@string/label_good"/>
			</FrameLayout>

		</LinearLayout>

	</ScrollView>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/btnSubmit"
		android:layout_marginTop="16dp"
		android:text="@string/btntxt_submit"
		android:minHeight="40dp"
		android:textColor="@android:color/holo_red_light"
		android:background="@android:color/holo_orange_light"/>

</LinearLayout>